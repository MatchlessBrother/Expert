<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_weight="2.0"
        android:layout_height="0dp"
        android:id="@+id/frag_home">

        <View
            android:id="@+id/statebar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_zj_top_green_bg"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frag_home_title_all"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:scaleType="centerCrop"
                android:id="@+id/frag_home_menu"
                android:background="@mipmap/ic_menu" />

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:orientation="vertical"
                android:id="@+id/frag_home_help_all">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                    android:id="@+id/frag_home_help"
                    android:background="@mipmap/ic_help" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:id="@+id/frag_home_note"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/frag_home_progress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_zjround_white"
            app:layout_constraintTop_toBottomOf="@id/frag_home_title_all">

            <com.expert.cleanup.view.NewCircleProgressView
                app:isTracked="true"
                app:track_width="15dp"
                app:start_progress="0"
                app:end_progress="100"
                app:circleBroken="false"
                app:end_color="#ff408DFE"
                app:progressDuration="2000"
                app:start_color="#ff2BC2D4"
                app:progressTextSize="36sp"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="12dp"
                app:trackColor="@color/lightgray"
                android:id="@+id/frag_home_circle"
                app:progressTextVisibility="false"
                app:animateType="OvershootInterpolator"
                app:progressTextColor="@color/font_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:text="0%"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/font_black"
                android:id="@+id/frag_home_circle_value"
                android:layout_alignTop="@id/frag_home_circle"
                app:layout_constraintTop_toTopOf="@id/frag_home_circle"
                app:layout_constraintLeft_toLeftOf="@id/frag_home_circle"
                app:layout_constraintRight_toRightOf="@id/frag_home_circle"
                app:layout_constraintBottom_toBottomOf="@id/frag_home_circle"/>

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                android:layout_centerHorizontal="true"
                android:id="@+id/frag_home_circle_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/frag_home_circle_value"/>

            <TextView
                android:textSize="21sp"
                android:text="0.0GB/1.0GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:id="@+id/frag_home_circle_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_home_circle_value"/>

            <TextView
                android:textSize="14sp"
                android:layout_marginTop="-10dp"
                android:text="@string/storagenote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/frag_home_circle_detail_str"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_home_circle"/>

            <RelativeLayout
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:id="@+id/frag_home_item_clean"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/shape_round_white_btn"
                app:layout_constraintTop_toBottomOf="@id/frag_home_circle_detail_str">

                <TextView
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/taptoclean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/frag_home_item_clean_font"/>

                <TextView
                    tools:text="88"
                    android:textSize="11sp"
                    android:minWidth="16dp"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/frag_home_item_clean_num"
                    android:background="@drawable/shape_red_point"
                    android:layout_alignTop="@id/frag_home_item_clean_font"
                    android:layout_toRightOf="@id/frag_home_item_clean_font" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/home_plan"
            android:layout_height="220dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_home_title_all"/>

        <ImageView
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_top_item_cpu"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/home_top_item_rom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_plan"
            app:layout_constraintTop_toBottomOf="@id/frag_home_title_all">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/home_top_item_rom_value_point"
                android:background="@drawable/shape_white_round"
                app:layout_constraintTop_toTopOf="@id/home_top_item_rom_value"
                app:layout_constraintBottom_toBottomOf="@id/home_top_item_rom_value"/>

            <TextView
                android:text="60"
                android:textSize="28sp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:textStyle="bold|italic"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_top_item_rom_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/home_top_item_rom_value_point"/>

            <TextView
                android:text="%STORAGE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_top_item_rom_title"
                app:layout_constraintLeft_toRightOf="@id/home_top_item_rom_value"
                app:layout_constraintBottom_toBottomOf="@id/home_top_item_rom_value"/>

            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.52GB Used/4.55GB Total"
                android:id="@+id/home_top_item_rom_detail"
                app:layout_constraintLeft_toLeftOf="@id/home_top_item_rom_value"
                app:layout_constraintTop_toBottomOf="@id/home_top_item_rom_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/home_top_item_ram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_top_item_rom">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/home_top_item_ram_value_point"
                android:background="@drawable/shape_white_round"
                app:layout_constraintTop_toTopOf="@id/home_top_item_ram_value"
                app:layout_constraintBottom_toBottomOf="@id/home_top_item_ram_value"/>

            <TextView
                android:text="60"
                android:textSize="28sp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_top_item_ram_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/home_top_item_ram_value_point"/>

            <TextView
                android:text="%RAM"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_top_item_ram_title"
                app:layout_constraintLeft_toRightOf="@id/home_top_item_ram_value"
                app:layout_constraintBottom_toBottomOf="@id/home_top_item_ram_value"/>

            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.52GB Used/4.55GB Total"
                android:id="@+id/home_top_item_ram_detail"
                app:layout_constraintLeft_toLeftOf="@id/home_top_item_ram_value"
                app:layout_constraintTop_toBottomOf="@id/home_top_item_ram_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/home_top_item_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_top_item_rom">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/home_top_item_cpu_value_point"
                android:background="@drawable/shape_white_round"
                app:layout_constraintTop_toTopOf="@id/home_top_item_cpu_value"
                app:layout_constraintBottom_toBottomOf="@id/home_top_item_cpu_value"/>

            <TextView
                android:text="60"
                android:textSize="28sp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:textStyle="bold|italic"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_top_item_cpu_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/home_top_item_cpu_value_point"/>

            <TextView
                android:text="℃/96℉"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_top_item_cpu_title"
                app:layout_constraintLeft_toRightOf="@id/home_top_item_cpu_value"
                app:layout_constraintBottom_toBottomOf="@id/home_top_item_cpu_value"/>

            <TextView
                android:text="CPU TEMP"
                android:textSize="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_top_item_cpu_detail"
                app:layout_constraintLeft_toLeftOf="@id/home_top_item_cpu_value"
                app:layout_constraintTop_toBottomOf="@id/home_top_item_cpu_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home_item_btn_bg">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/frag_home_item_cpu">

                    <ImageView
                        android:id="@+id/cpu_icon"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@mipmap/ic_cpu_1"
                        android:scaleType="fitCenter"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        tools:text="88"
                        android:textSize="11sp"
                        android:minWidth="16dp"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/frag_home_item_cpu_num"
                        android:background="@drawable/shape_red_point"/>

                    <TextView
                        android:text="56.0℃"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/font_gray"
                        android:layout_below="@id/cpu_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/frag_home_item_cpu_value"/>

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginTop="3dp"
                        android:text="@string/cpucooler"
                        android:textColor="@color/font_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/frag_home_item_cpu_name"
                        android:layout_below="@id/frag_home_item_cpu_value"/>
                </RelativeLayout>

                <View
                    android:layout_width="2px"
                    android:background="#ffeeeeee"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="30dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/frag_home_item_boost">

                    <ImageView
                        android:id="@+id/boost_icon"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@mipmap/ic_boost_1"
                        android:scaleType="fitCenter"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        tools:text="88"
                        android:textSize="11sp"
                        android:minWidth="16dp"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="26dp"
                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/frag_home_item_boost_num"
                        android:background="@drawable/shape_red_point"/>

                    <TextView
                        android:text="48%"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/font_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/boost_icon"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/frag_home_item_boost_value"/>

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="@string/booter"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_gray"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/frag_home_item_boost_name"
                        android:layout_below="@id/frag_home_item_boost_value"/>
                </RelativeLayout>

                <View
                    android:layout_width="2px"
                    android:background="#ffeeeeee"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="30dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:layout_width="0dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/frag_home_item_battery">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/battery_icon"
                        android:src="@mipmap/ic_battery_1"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        tools:text="88"
                        android:textSize="11sp"
                        android:minWidth="16dp"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="21dp"
                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/frag_home_item_battery_num"
                        android:background="@drawable/shape_red_point"/>

                    <TextView
                        android:text="0%"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/font_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/battery_icon"
                        android:id="@+id/frag_home_item_battery_value"/>

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="@string/battery"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/font_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/frag_home_item_battery_name"
                        android:layout_below="@id/frag_home_item_battery_value"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <com.expert.cleanup.baer.BannerView
            app:retryNumber="0"
            app:closeEnable="true"
            android:visibility="gone"
            android:id="@+id/bannerview"
            app:heightMode="BANNER_HEIGHT_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:placementId="@string/fb_banner_id"/>
    </RelativeLayout>
</LinearLayout>