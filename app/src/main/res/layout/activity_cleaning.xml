<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/animator_bg"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:id="@+id/statebar"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/cleaning_menu"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_back"
            android:layout_width="44dp"
            android:scaleType="centerInside"/>

        <TextView
            android:text="@string/cleansm"
            android:textSize="22sp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"/>

        <ImageView
            android:visibility="invisible"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_help"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="28dp"
            android:id="@+id/cleaned_note"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cleaning_windmill_all"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:visibility="gone"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            android:id="@+id/cleaning_windmill"/>

        <TextView
            android:textSize="22sp"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:text="Cleaning..."
            android:layout_marginTop="12dp"
            android:textStyle="italic|bold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_windmill_note"/>

        <LinearLayout
            android:layout_weight="2"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                app:lottie_loop="false"
                android:layout_weight="1"
                android:layout_height="0dp"
                app:lottie_autoPlay="false"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:id="@+id/cleaning_lottieview"
                app:lottie_fileName="clean/clean.json"
                android:layout_gravity="center_horizontal"
                app:lottie_imageAssetsFolder="clean/images"/>

            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold|italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_green"
                android:text="@string/analyzingandcleaningup"/>

            <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginTop="6dp"
                android:textStyle="bold|italic"
                android:layout_marginBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_green"
                android:text="@string/pleasewait"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/cleaned_all"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="104dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_sweetor"
                android:id="@+id/cleaned_sweetor"/>

            <ImageView
                android:visibility="gone"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:scaleType="centerCrop"
                android:id="@+id/cleaned_start1"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintRight_toLeftOf="@id/cleaned_sweetor"
                app:layout_constraintBottom_toBottomOf="@id/cleaned_sweetor"/>

            <ImageView
                android:visibility="gone"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:scaleType="centerCrop"
                android:id="@+id/cleaned_start2"
                app:layout_constraintTop_toTopOf="@id/cleaned_sweetor"
                app:layout_constraintRight_toRightOf="@id/cleaned_sweetor"/>

            <ImageView
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="@+id/cleaned_sweetor"
                app:layout_constraintLeft_toRightOf="@id/cleaned_start2"
                app:layout_constraintBottom_toBottomOf="@id/cleaned_sweetor"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:textSize="18sp"
                    android:text="Completed"
                    android:gravity="center"
                    android:singleLine="true"
                    android:id="@+id/clean_result"
                    android:textStyle="italic|bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cleaned_sweetor"/>

                <TextView
                    android:textSize="18sp"
                    android:text="clean  0MB"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clean_result_detail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clean_result"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/cleaned_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:gravity="bottom">

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/cleaned_boost_all"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_white_bg">

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:id="@+id/boost_icon"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_boost_2"
                        android:layout_centerVertical="true"/>

                    <TextView
                        tools:text="8"
                        android:textSize="11sp"
                        android:minWidth="17dp"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_height="17dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/cleaned_red_boost_all"
                        android:layout_alignTop="@id/boost_icon"
                        android:layout_toRightOf="@id/boost_icon"
                        android:background="@drawable/shape_red_point"/>

                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="@string/phoneboost"
                        android:layout_marginLeft="6dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/cleaned_red_boost_all"/>

                    <TextView
                        android:text="@string/go"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="#ffff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:id="@+id/cleaned_battery_all"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_white_bg">

                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/battery_icon"
                        android:src="@mipmap/ic_battery_2"
                        android:layout_centerVertical="true"/>

                    <TextView
                        tools:text="8"
                        android:textSize="11sp"
                        android:minWidth="17dp"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_height="17dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/cleaned_red_battery_all"
                        android:layout_alignTop="@id/battery_icon"
                        android:layout_toRightOf="@id/battery_icon"
                        android:background="@drawable/shape_red_point"/>

                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="@string/batterysaver"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="6dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/cleaned_red_battery_all"/>

                    <TextView
                        android:text="@string/go"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#ffff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cleaned_cpucooler_all"
                    android:background="@drawable/common_white_bg">

                    <ImageView
                        android:id="@+id/cpu_icon"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@mipmap/ic_cpu_2"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"/>

                    <TextView
                        tools:text="8"
                        android:textSize="11sp"
                        android:minWidth="17dp"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_height="17dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="2dp"
                        android:layout_width="wrap_content"
                        android:layout_alignTop="@id/cpu_icon"
                        android:layout_toRightOf="@id/cpu_icon"
                        android:id="@+id/cleaned_red_cpucooler_all"
                        android:background="@drawable/shape_red_point"/>

                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="@string/cpucoolersm"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/cleaned_red_cpucooler_all"/>

                    <TextView
                        android:text="@string/go"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="#ffff0000"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:id="@+id/cleaned_info_all"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_white_bg">

                    <ImageView
                        android:id="@+id/info_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/ic_biginfo"
                        android:layout_centerVertical="true"/>

                    <TextView
                        tools:text="8"
                        android:textSize="11sp"
                        android:minWidth="17dp"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:visibility="gone"
                        android:paddingRight="3dp"
                        android:layout_height="17dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="2dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/cleaned_red_info_all"
                        android:layout_alignTop="@id/info_icon"
                        android:layout_toRightOf="@id/info_icon"
                        android:background="@drawable/shape_red_point"/>

                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="@string/infos"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/cleaned_red_info_all"/>

                    <TextView
                        android:text="@string/go"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="#ffff0000"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>